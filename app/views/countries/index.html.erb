

<div class="container">
  <div class="well">
    <h1><p class="text-center">Listing of Exotic Countries and their Super Dishes</p></h1>
  </div>
  <br>
  <br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Country Name</th>
        <th>Region</th>
        <th>Dish</th>
        <th>Flavor</th>
        <th>Ingredients</th>
      </tr>
    </thead>

    <tbody>
      <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.region %></td>
        <td><%= country.dish %></td>
        <td><%= country.flavor %></td>
        <td><%= country.ingredients %></td>
      </tr>
      <%end%>
    </tbody>
  </table>

  <p>
    <button type="button" class="btn btn-default btn-lg"><%= link_to "Add a new country", new_country_path %></button>
  </p>
</div>
